
@{
    ViewBag.Title = "Ürün Detay";
}

@using MVC_Template_Ornek_3.Models
@model  Urunler

<div class="row">
    <div class="col-md-12">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Ürünler
                </div>
                <div class="block-controls">

                    <span aria-hidden="true" class="icon icon-arrow-down icon-size-medium block-control-collapse"></span>
                    <a href="/Urun/UrunEkle" class="btn btn-info rounded" role="button">Yeni Ürün Ekle</a>
                </div>
            </div>
            <div class="block-content-outer">
                <div class="block-content-inner">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Ürün Adı</th>
                                    <th>Tedarikçi</th>
                                    <th>Kategori</th>
                                    <th>Birimdeki Miktar</th>
                                    <th>Fiyat</th>
                                    <th>Stok</th>
                                    <th>Yeni Satış</th>
                                    <th>En Az Yeniden Satış Miktarı</th>
                                    <th>Sonlandı</th>
                                    <th>  @* sil *@   </th>
                                </tr>
                            </thead>
                            <tbody>


                                <tr>
                                    <td>@Model.UrunAdi</td>

                                    @*Database'de kategoriId ve TedarikçiId alanlarında null kayıtlar var eğer bu kontrolü yapmazsak hata alınır*@

                                    @if (Model.Tedarikciler == null)
                                    {

                                        @* Eğer  null kayıt varsa eğer boş bir hücre oluşturulsun*@
                                        <td></td>

                                    }
                                    else
                                    {
                                        <td><span class="label label-info">@Model.Tedarikciler.SirketAdi</span></td>
                                    }



                                    @if (Model.Kategoriler == null)
                                    {
                                        <td></td>
                                    }
                                    else
                                    {
                                        <td><span class="label label-primary">@Model.Kategoriler.KategoriAdi </span></td>

                                    }
                                    <td>@Model.BirimdekiMiktar</td>
                                    <td>@Model.Fiyat</td>
                                    <td>@Model.Stok</td>
                                    <td>@Model.YeniSatis</td>
                                    <td>@Model.EnAzYenidenSatisMikatari</td>

                                    @if (Model.Stok == 0)
                                    {

                                        <td><span class="label label-danger">Stokta Yok</span></td>

                                    }
                                    else
                                    {
                                        <td><span class="label label-success">Stokta Var</span></td>
                                    }
                                  

                                    @*Sil adlı action'a bir id değeri göndermemiz gerekiyor*@
                                    <td><a href="/Urun/Sil/@Model.UrunID" class="btn btn-danger rounded" role="button">Sil</a></td>

                                </tr>



                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


