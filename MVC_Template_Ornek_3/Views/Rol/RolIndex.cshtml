
@{
    ViewBag.Title = "Rol Anasayfa";
}

@using System.Web.Security;

@model List<string>

<div class="row">
    <div class="col-md-8">
        <div class="block">
            <div class="block-heading">
                <div class="main-text h2">
                    Roller

                </div>
                <div class="block-controls">

                    <span aria-hidden="true" class="icon icon-cross icon-size-medium block-control-remove"></span>

                    <a href="/Rol/RolEkle" class="btn btn-info">Yeni Rol Oluştur</a>

                </div>
                <div class="block-content-outer">
                    <div class="block-content-inner">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Rol Adı</th>
                                    <th>Sil</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (string item in Model)
                                {
                                    <tr>
                                        <td>@item</td>
                                      
                                        <td><a href="#" class="btn btn-danger rolSil" data-roladi="@item"> Sil</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>

                </div>
            </div>

        </div>
    </div>

</div>

